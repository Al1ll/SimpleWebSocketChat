
FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-buster-slim AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /src
COPY ["Chat.Api/Chat.Api.fsproj", "Chat.Api/"]
RUN dotnet restore "Chat.Api/Chat.Api.fsproj"
COPY . .
WORKDIR "/src/Chat.Api"
RUN dotnet build "Chat.Api.fsproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Chat.Api.fsproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Chat.Api.dll"]

